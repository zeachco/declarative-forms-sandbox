{
  "compilerOptions": {
    "lib": ["DOM.Iterable", "DOM", "ESNext"],
    "resolveJsonModule": true,
    "target": "ES2015",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src"]
}
